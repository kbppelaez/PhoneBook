@model SearchListView
@{
    ViewData["Title"] = "Search Contact";
}


<form method="GET" asp-action="/contacts/search/">
    <div class="input-group mb-3">
        @if (Model == null)
        {
            <input type="text" class="form-control" value="" placeholder="Search" aria-label="Search" aria-describedby="basic-addon2" name="term">
        }
        else
        {
            <input type="text" class="form-control" value="@Model.term" placeholder="Search" aria-label="Search" aria-describedby="basic-addon2" name="search">
        }
        <div class="input-group-append">
            <input type="submit" class="btn btn-primary" value="Search" />
        </div>
    </div>
</form>

@if(Model == null || Model.Contacts == null)
{
    <br/><br />
    <div align="center">
        <h2>No Results</h2>
    </div>
}else
{
    <div class="list-group" id="list-tab" role="tablist">
        @foreach (var item in Model.Contacts)
        {
            <!-- Add Image? -->
            <a href="/contacts/@item.ContactId" class="list-group-item list-group-item-action">
                @Html.DisplayFor(modelItem => item.FullName)
            </a>

        }
    </div>
}