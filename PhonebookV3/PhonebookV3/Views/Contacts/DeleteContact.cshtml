@model ContactDetailsViewModel
@{
    ViewData["Title"] = "Delete Contact";
    var id = Model.Details.Id;
}

<div class="alert alert-warning fade show" role="alert">
    <strong>Are you sure you want to delete this?</strong>
</div>

<h2><strong>@Model.Details.Name</strong></h2>
<div>
    @if (!string.IsNullOrEmpty(Model.Details.Email))
    {
        <div>
            <strong>Email Address</strong><br />
            @Model.Details.Email
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.Details.PhoneNumber))
    {
        <div>
            <strong>Phone Number</strong><br />
            @Model.Details.PhoneNumber
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.Details.Notes))
    {
        <div>
            <strong>Notes</strong><br />
            @Model.Details.Notes
        </div>
    }
</div>
<br />
<div class="form-group">
    <form method="POST">
        <input type="hidden" asp-for="@id" />
        <input type="submit" value="Delete Contact" class="btn btn-danger" />
        <a href="/contacts/@Model.Details.Id" class="btn btn-secondary">Cancel</a>
    </form>
</div>