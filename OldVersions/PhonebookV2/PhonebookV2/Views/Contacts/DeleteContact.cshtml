@model ContactsView
@{
    ViewData["Title"] = "Delete Contact";
}

<div class="alert alert-warning fade show" role="alert">
    <strong>Are you sure you want to delete this?</strong>
</div>

<h2><strong>@Model.FullName</strong></h2>
<div>
    @if (!string.IsNullOrEmpty(Model.Email))
    {
        <div>
            <strong>Email Address</strong><br />
            @Model.Email
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
    {
        <div>
            <strong>Phone Number</strong><br />
            @Model.PhoneNumber
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div>
            <strong>Notes</strong><br />
            @Model.Notes
        </div>
    }
</div>
<br />
<div class="form-group">
    <form method="POST">
        <input type="hidden" asp-for="ContactId" />
        <input type="submit" value="Delete Contact" class="btn btn-danger" />
        <a href="/contacts/@Model.ContactId" class="btn btn-secondary">Cancel</a>
    </form>
</div>